<odoo>
  <data>
    <record id="master_spbu_view_tree" model="ir.ui.view">
      <field name="name">master_spbu.tree</field>
      <field name="model">master_spbu.akumulasidata</field>
      <field name="arch" type="xml">
        <tree>
          <field name="month_year"/>
          <field name="tanggal"/>
          <field name="sampai_tanggal"/>
          <field name="status"/>
        </tree>
      </field>
    </record>

    <record id="master_spbu_view_tree2" model="ir.ui.view">
      <field name="name">master_spbu.tree2</field>
      <field name="model">master_spbu.stock</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="tanggal"/>
        </tree>
      </field>
    </record>

    <record id="master_spbu_view_tree3" model="ir.ui.view">
      <field name="name">master_spbu.tree3</field>
      <field name="model">master_spbu.premium3</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="tanggal"/>
        </tree>
      </field>
    </record>

    <record id='master_spbu_view_form' model='ir.ui.view'>
      <field name="name">master_spbu.form</field>
      <field name="model">master_spbu.akumulasidata</field>
      <field name="arch" type="xml">
        <form string="Report" >
          <header>
            <button name="action_draft" string="Edit" type="object" class="oe_highlight" attrs="{'invisible': [('status', '!=', 'confirmed')]}"/>
            <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': [('status', '!=', 'draft')]}"/>
            <button name="action_done" string="Done" type="object" class="oe_highlight" attrs="{'invisible': [('status', '!=', 'confirmed')]}"/>
            <field name="status" widget="statusbar"/>
          </header>
          <sheet>
            <group attrs="{'readonly': [('status', '=', 'confirmed')]}">
              <field name="month_year" widget="month_year_widget" attrs="{'readonly': [('status', '=', 'confirmed')]}"/>
              <field name="tanggal" attrs="{'required': [('status', '=', 'draft')], 'readonly': [('status', '=', 'confirmed')]}"/>
              <field name="sampai_tanggal" attrs="{'required': [('status', '=', 'draft')], 'readonly': [('status', '=', 'confirmed')]}"/>
            </group>
            <notebook>
              <page string="Product">
                <field name="akumulasidata_line_ids" nolabel="1" options="{'reload_on_button': true}" context="{'parent_status': status}">
                  <tree string="Product" editable="bottom" attrs="{'readonly': [('parent_status', '=', 'confirmed')], 'create': [('parent_status', '!=', 'confirmed')], 'delete': [('parent_status', '!=', 'confirmed')]}">
                    <field name="tanggal" attrs="{'readonly': [('parent_status', '=', 'confirmed')]}"/>
                    <field name="stock_awal" attrs="{'readonly': [('parent_status', '=', 'confirmed')]}"/>
                    <field name="kiriman" attrs="{'readonly': [('parent_status', '=', 'confirmed')]}"/>
                    <field name="tera" attrs="{'readonly': [('parent_status', '=', 'confirmed')]}"/>
                    <field name="t1" attrs="{'readonly': [('parent_status', '=', 'confirmed')]}"/>
                    <field name="t2" attrs="{'readonly': [('parent_status', '=', 'confirmed')]}"/>
                    <field name="t3" attrs="{'readonly': [('parent_status', '=', 'confirmed')]}"/>
                    <field name="t4" attrs="{'readonly': [('parent_status', '=', 'confirmed')]}"/>
                    <field name="laku" attrs="{'readonly': [('parent_status', '=', 'confirmed')]}"/>
                    <field name="rupiah" attrs="{'readonly': [('parent_status', '=', 'confirmed')]}"/>
                    <field name="stock_akhir" attrs="{'readonly': [('parent_status', '=', 'confirmed')]}"/>
                    <field name="stock_tangki" attrs="{'readonly': [('parent_status', '=', 'confirmed')]}"/>
                    <field name="selisih" attrs="{'readonly': [('parent_status', '=', 'confirmed')]}"/>
                    <field name="akumulasi" attrs="{'readonly': [('parent_status', '=', 'confirmed')]}"/>
                    <field name="parent_status" invisible="1"/>
                  </tree>
                </field>
                  <group colspan="4">
                      <group class="oe_subtotal_footer oe_right" attrs="{'invisible': [('status', '=', 'draft')]}">
                        <field name="total_loses"/>
                        <field name="total_rupiah" class="oe_subtotal_footer"/>
                          <!-- <field name="tax_totals" widget="account-tax-totals-field" nolabel="1" colspan="2" attrs="{'readonly': ['|', ('state', '!=', 'draft'), '&amp;', ('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt')), ('quick_edit_mode', '=', False)]}"/>

                          <field name="invoice_payments_widget" colspan="2" nolabel="1" widget="payment"/> -->
                      </group>
                      <!-- <field name="invoice_outstanding_credits_debits_widget" class="oe_invoice_outstanding_credits_debits" colspan="2" nolabel="1" widget="payment" attrs="{'invisible': [('state', '!=', 'posted')]}"/> -->
                  </group>
            </page>
            </notebook>
          </sheet>
        </form>
        </field>
    </record>
    
    <record id='master_spbu_view_form2' model='ir.ui.view'>
      <field name="name">master_spbu.formstock</field>
      <field name="model">master_spbu.stock</field>
      <field name="arch" type="xml">
        <form string="Report">
          <sheet>
            <group>
              <field name="name"/>
              <field name="tanggal"/>
            </group>
            <notebook>
              <page string="Product">
                <field name="stock_line_ids" nonlabel="1" options="{'reload_on_button': true}">
                  <tree string="Product" editable="bottom" edit="true" create="true" delete="true">
                    <field name="doa_awal"/>
                    <field name="tebusan"/>
                    <field name="kiriman"/>
                    <field name="sisa_do"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
        </field>
    </record>

     <record id='master_spbu_view_form3' model='ir.ui.view'>
      <field name="name">master_spbu.form3</field>
      <field name="model">master_spbu.premium3</field>
      <field name="arch" type="xml">
        <form string="Report">
          <sheet>
            <group>
              <field name="name"/>
              <field name="tanggal"/>
            </group>
            <notebook>
              <page string="Product">
                <field name="premium3_line_ids" nonlabel="1" options="{'reload_on_button': true}">
                  <tree string="Product" editable="bottom" edit="true" create="true" delete="true">
                    <field name="tanggal"/>
                    <field name="premium"/>
                    <field name="solar"/>
                    <field name="pertamax"/>
                    <field name="pertalite"/>
                    <field name="dexlite"/>
                    <field name="total"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>
